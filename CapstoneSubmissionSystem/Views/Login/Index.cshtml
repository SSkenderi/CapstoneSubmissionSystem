@model CapstoneSubmissionSystem.Models.User

@{
    ViewBag.Title = "Home";
}
@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/modernizr")
@Scripts.Render("~/bundles/umd")
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")



<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="/docs/4.0/assets/img/favicons/favicon.ico">
    <link href="../../dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="css/custom.css">

</head>

<body class="text-center">
    <nav class="navbar navbar-expand-lg p-3" style="background-color: #d24700; color: #d24700;">
        <div class="container-fluid">
            <a class="navbar-brand" style="color:white;" href="#">Capstone Submission System</a>
            <img class="mb-12" src="~/Images/SSULogo.jpg" alt="" width="100" height="50">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class=" collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav ms-auto ">
                    @*<li class="nav-item">
                        <a class="nav-link login" style="color:white;" href="@Url.Action("Index", "Login")">Logout</a>
                    </li>*@
                </ul>
            </div>
        </div>
    </nav>


    <img class="mb-4" src="~/Images/SSULogo.jpg" alt="" width="100" height="100">
    <div class="row justify-content-center">
        <div class="col-xs-offset-3 col-xs-6 col-md-offset-4 col-md-4">
            <div class="card" align-content="center">
                <div class="card-header"><h2>Log In</h2></div>
                <div class="card-body">

                    @using (Html.BeginForm("Index", "Login", FormMethod.Post))

                    {

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">

                            <label for="username" class="cols-sm-2 control-label">Username</label>

                            <div class="cols-sm-10" style="margin-top:3px;">
                                @Html.ValidationMessageFor(p => p.Username, "", new { @class = "text-danger" })
                                <div class="input-group justify-content-center">
                                    <span class="input-group-addon"><i class="fa fa-users fa" aria-hidden="true"></i></span>
                                    @Html.EditorFor(p => p.Username, new { htmlAttributes = new { @class = "form-control" } })

                                </div>
                            </div>
                        </div>


                        <div class="form-group" style="margin-top:10px;">
                            <label for="password" class="cols-sm-2 control-label">Password</label>
                            <div class="cols-sm-10 justify-content-center" style="margin-top:3px;">
                                @Html.ValidationMessageFor(p => p.Password, "", new { @class = "text-danger" })
                                <div class="input-group justify-content-center">
                                    <span class="input-group-addon"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
                                    @Html.EditorFor(p => p.Password, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                        </div>


                        <div class="form-group" style="margin-top:10px;">
                            <button class="btn btn-primary btn-lg btn-block login-button justify-content-center">Log In</button>
                        </div>

                    }

                </div>
            </div>
        </div>
    </div>
    <style>
        .navbar {
            /*width: 100% !important;*/
            /*right: 405px !important;
            margin-top: 10px !important;
            */
            font: 400;
            font-weight: bold;
            font-size: medium;
            top: -10px;
        }

        .container {
            margin: 0 !important;
            width: 100% !important;
            max-width: 100% !important;
        }

        .body-content {
            width: 100%;
            white-space: nowrap;
            padding: 0px;
        }

        .hidden {
            display: none;
        }

        .body {

            width: 100%;
            white-space: nowrap;
            padding: 0px;
        }
    </style>
</body>
</html>






